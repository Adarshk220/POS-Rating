<?xml version="1.0" encoding="UTF-8" ?>

<templates xml:space="preserve">
    <t t-name="pos.product_cards"
       t-inherit="point_of_sale.ProductCard"
       t-inherit-mode="extension">
             <xpath expr="//div[hasclass('product-information-tag')]" position="before">
                 <span class="badge rounded-pill" t-if="props.product_rating">
                     <t t-out="props.product_rating"/>
                     <t t-out="'/5'"/>
                     <i class="fa fa-fw fa-star" aria-label="Rating"
                        role="img" title="Rating"/>
                 </span>
             </xpath>
    </t>
</templates>